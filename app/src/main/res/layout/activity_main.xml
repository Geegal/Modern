<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Choose Your Route"
        android:textStyle="bold|italic"
        android:textSize="36sp"
        android:gravity="center"
        android:textColor="#FF5722"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:text="Malaa - Westlands"
        android:textStyle="bold|italic"
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        android:layout_margin="20dp"
        android:id="@+id/btnwestlands"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:text="Malaa - Upperhill"
        android:textStyle="bold|italic"
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        android:layout_margin="20dp"

        android:id="@+id/btnupperhill"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:text="Malaa - Kenyatta"
        android:textStyle="bold|italic"
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        android:layout_margin="20dp"
        android:id="@+id/btnkenyatta"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:text="Nairobi - Kitengela"
        android:textStyle="bold|italic"
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        android:layout_margin="20dp"
        android:id="@+id/btnkitengela"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:text="Nairobi - Thika"
        android:textStyle="bold|italic"
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        android:layout_margin="20dp"
        android:id="@+id/btnthika"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:text="Malaa - Nairobi"
        android:textStyle="bold|italic"
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        android:layout_margin="20dp"
        android:id="@+id/btnmalaa"/>
</LinearLayout>